@model APP.Models.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập hệ thống";
    Layout = null; 
}

<!DOCTYPE html>
<html lang="vi">

 <body>
     <div class="login-box">

         <button type="button" class="btn btn-outline-primary btn-sm connect-btn"
                 data-bs-toggle="modal" data-bs-target="#connectModal">
             Connect
         </button>

         <img src="~/images/logov4.jpg" alt="Logo" class="logo-login" />

         <h3 class="title-login">ĐĂNG NHẬP HỆ THỐNG</h3>

         @if (!ViewData.ModelState.IsValid)
         {
             <div class="alert alert-danger">
                 @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                 {
                     <div>@error.ErrorMessage</div>
                 }
             </div>
         }

         <form asp-action="Login" method="post">
             <div class="mb-3 text-start">
                 <label class="form-label">Tên đăng nhập</label>
                 <input asp-for="tendangnhap" class="form-control" />
             </div>

             <div class="mb-3 text-start">
                 <label class="form-label">Mật khẩu</label>
                 <input asp-for="matkhau" type="password" class="form-control" />
             </div>

             <div class="form-check text-start mb-3">
                 <input asp-for="RememberMe" class="form-check-input" />
                 <label class="form-check-label" for="RememberMe">Giữ đăng nhập?</label>
             </div>

             <button type="submit" class="btn-login">ĐĂNG NHẬP</button>
         </form>
     </div>

     <div class="modal fade" id="connectModal" tabindex="-1" aria-labelledby="connectModalLabel" aria-hidden="true">
         <div class="modal-dialog modal-dialog-centered">
             <div class="modal-content">
                 <div class="modal-header bg-primary text-white">
                     <h5 class="modal-title" id="connectModalLabel">Kết nối cơ sở dữ liệu</h5>
                     <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                 </div>

                 <div class="modal-body">
                     <form id="connectForm">
                         <div class="mb-3">
                             <label class="form-label">Server</label>
                             <input type="text" id="server" class="form-control" placeholder="VD: 192.168.0.26" required>
                         </div>
                         <div class="mb-3">
                             <label class="form-label">Database</label>
                             <input type="text" id="database" class="form-control" placeholder="VD: QY42026V6" required>
                         </div>
                         <div class="mb-3">
                             <label class="form-label">User ID</label>
                             <input type="text" id="userid" class="form-control" value="sa" required>
                         </div>
                         <div class="mb-3">
                             <label class="form-label">Password</label>
                             <input type="password" id="password" class="form-control" placeholder="Mật khẩu SQL" required>
                         </div>
                     </form>

                     <div id="connectStatus" class="text-center mt-2"></div>
                 </div>

                 <div class="modal-footer">
                     <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                     <button type="button" class="btn btn-success" id="btnConnect">Kết nối</button>
                 </div>
             </div>
         </div>
     </div>


     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


     <script>document.getElementById("btnConnect").addEventListener("click", async function () {
            const server = document.getElementById("server").value.trim();
            const database = document.getElementById("database").value.trim();
            const userid = document.getElementById("userid").value.trim();
            const password = document.getElementById("password").value.trim();

            const response = await fetch("/Account/TestConnection", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ server, database, userid, password })
            });

            const result = await response.json();
            const status = document.getElementById("connectStatus");
            if (result.success) {
                status.innerHTML = `<div class='alert alert-success'>✅ Kết nối thành công!</div>`;
            } else {
                status.innerHTML = `<div class='alert alert-danger'>❌ ${result.message}</div>`;
            }
        });</script>
 </body>
 <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - QY4</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
      
        body {
            background: #f7f8fa;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            font-family: 'Segoe UI', sans-serif;
            position: relative;
        }

  
        .connect-btn {
            position: absolute;
            top: 20px;
            right: 20px;
            font-size: 13px;
            padding: 6px 14px;
            border: 1px solid #e91e63;
            color: #e91e63;
            background-color: #fff;
            border-radius: 6px;
            font-weight: 600;
            transition: all 0.2s ease;
        }

            .connect-btn:hover {
                background-color: #e91e63;
                color: #fff;
                text-decoration: none;
            }

     
        .login-box {
            background: #fff;
            padding: 40px 35px;
            border-radius: 12px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            width: 380px;
            text-align: center;
        }

            .login-box img {
                width: 90px;
                margin-bottom: 15px;
            }

            .login-box h3 {
                font-weight: 700;
                margin-bottom: 25px;
                color: #333;
                white-space: nowrap;
            }

  
        .btn-login {
            background-color: #e91e63;
            color: #fff;
            font-weight: 600;
            border: none;
            padding: 10px;
            width: 100%;
            border-radius: 6px;
            transition: 0.2s;
        }

            .btn-login:hover {
                background-color: #c2185b;
            }

 
        .form-control:focus {
            border-color: #e91e63;
            box-shadow: 0 0 0 0.15rem rgba(233, 30, 99, 0.25);
        }

        .error {
            color: #d32f2f;
            margin-top: 10px;
            font-size: 0.9em;
        }

    
        .modal-header {
            background-color: #e91e63 !important;
            color: #fff !important;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
        }


            .modal-header .btn-close {
                filter: invert(1);
            }


        .btnConnect.btn btn-success {
            background-color: #e91e63 !important;
            border-color: #e91e63 !important;
            color: #fff !important;
            font-weight: 600;
            transition: all 0.2s ease;
        }

            .btn-connect-red:hover {
                background-color: #c2185b !important;
                border-color: #c2185b !important;
            }

  
        .modal-footer .btn-secondary {
            background-color: #6c757d;
            border: none;
        }

   
        .modal-content {
            border-radius: 8px;
            border: none;
        }
    </style>
</head>
</html>