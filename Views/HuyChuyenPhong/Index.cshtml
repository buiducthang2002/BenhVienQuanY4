@model List<HuyChuyenPhongModel>

<h3>HUỶ CHUYỂN PHÒNG</h3>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Lỗi!</strong> @ViewBag.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card mb-3">
    <div class="card-body">
        <form method="get" asp-action="Index" class="row g-3" id="searchForm">
            <div class="col-md-4">
                <label for="makcb" class="form-label"><strong>Mã KCB:</strong></label>
                <input type="number" class="form-control" id="makcb" name="makcb"
                       value="@ViewBag.MaKCB" placeholder="VD: 2500036240"
                       min="1" required autofocus />
                <div class="invalid-feedback">
                    Vui lòng nhập mã KCB hợp lệ (số dương)
                </div>
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100" id="btnSearch">
                    <i class="bi bi-search"></i> Tìm kiếm
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Loading Spinner -->
<div id="loadingSpinner" class="text-center my-4" style="display: none;">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Đang tải...</span>
    </div>
    <p class="mt-2">Đang tìm kiếm...</p>
</div>

@if (ViewBag.MaKCB != null && Model.Count == 0)
{
    <div class="alert alert-warning" role="alert">
        <i class="bi bi-exclamation-triangle"></i>
        Không tìm thấy bệnh nhân có mã KCB <strong>@ViewBag.MaKCB</strong> hoặc bệnh nhân chưa chuyển phòng.
    </div>
}

<div id="resultTable">
    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>Mã KCB</th>
                <th>Họ tên</th>
                <th>Phòng gốc</th>
                <th>Phòng đã chuyển</th>
                <th>Ngày chuyển</th>
                <th>Trạng thái</th>
                <th>Chi phí (VNĐ)</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>@item.makcb</td>
        <td><strong>@item.hoten</strong></td>
        <td>
            <span class="badge bg-primary">@item.makk</span><br/>
            <small>@item.tenphonggoc</small>
        </td>
        <td>
            <span class="badge bg-warning text-dark">@item.makkc</span><br/>
            <small>@item.tenphongchuyen</small>
        </td>
        <td>@(item.ngaychuyen?.ToString("dd/MM/yyyy HH:mm") ?? "")</td>
        <td>
            @if (item.tinhtrang == "1" || item.tinhtrang == "true")
            {
                <span class="badge bg-success">Đã tiếp nhận</span>
            }
            else
            {
                <span class="badge bg-secondary">Chưa tiếp nhận</span>
            }
        </td>
        <td class="text-end">
            <strong>@item.tongchiphi.ToString("N0")</strong>
        </td>
        <td>
            <button class="btn btn-danger btn-sm btn-huy"
                data-makcb="@item.makcb"
                data-madieutri="@item.madieutri"
                data-makk="@item.makk"
                data-makkc="@item.makkc"
                data-chiphi="@item.tongchiphi.ToString("N0")">
                <i class="bi bi-x-circle"></i> Huỷ
            </button>
        </td>
    </tr>
}
        </tbody>
    </table>
</div>

<style>
    .btn-huy:disabled {
        cursor: not-allowed;
    }
    #loadingSpinner {
        min-height: 100px;
    }
</style>

<script>
// Form validation
document.getElementById('searchForm').addEventListener('submit', function(e) {
    const makcbInput = document.getElementById('makcb');
    const value = parseInt(makcbInput.value);

    if (!value || value <= 0) {
        e.preventDefault();
        makcbInput.classList.add('is-invalid');
        return false;
    }

    makcbInput.classList.remove('is-invalid');

    // Show loading spinner
    document.getElementById('loadingSpinner').style.display = 'block';
    document.getElementById('resultTable').style.opacity = '0.5';
    document.getElementById('btnSearch').disabled = true;
});

// Xử lý hủy chuyển phòng
document.querySelectorAll('.btn-huy').forEach(btn => {
    btn.addEventListener('click', function() {
        const makcb = this.dataset.makcb;
        const madieutri = this.dataset.madieutri;
        const makk = this.dataset.makk;
        const makkc = this.dataset.makkc;
        const chiphi = this.dataset.chiphi;

        const message = `HỦY CHUYỂN PHÒNG\n\n` +
                       `Mã KCB: ${makcb}\n` +
                       `Phòng: ${makkc} → ${makk}\n` +
                       `Chi phí sẽ đẩy về: ${chiphi} VNĐ\n\n` +
                       `Bạn có chắc chắn muốn hủy?`;

        if (!confirm(message)) {
            return;
        }

        // Disable button và show loading
        this.disabled = true;
        this.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Đang xử lý...';

        fetch('/HuyChuyenPhong/HuyChuyenPhong', {
            method: 'POST',
            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
            body: `makcb=${makcb}&madieutri=${encodeURIComponent(madieutri)}&makk=${makk}&makkc=${makkc}`
        })
        .then(response => {
            if (!response.ok) {
                return response.text().then(text => {
                    throw new Error(text || 'Lỗi không xác định');
                });
            }
            return response.text();
        })
        .then(msg => {
            alert(msg);
            location.reload();
        })
        .catch(err => {
            alert('Lỗi: ' + err.message);
            // Re-enable button
            this.disabled = false;
            this.innerHTML = '<i class="bi bi-x-circle"></i> Huỷ';
        });
    });
});

// Remove invalid class on input
document.getElementById('makcb').addEventListener('input', function() {
    this.classList.remove('is-invalid');
});
</script>

