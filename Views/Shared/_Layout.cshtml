<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bệnh viện quân y 4 </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/APP.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3" style="background-color:#e91e63;">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">APP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="DangKy" asp-action="Index">Đăng ký khám bệnh</a>
                        </li>
                      
                        <li class="nav-item">   
                            <a class="nav-link text-white" asp-controller="CanLamSang" asp-action="Index">Cận lâm sàng</a>
                        </li>
                       
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="KySo" asp-action="Index">Hủy ký số bệnh nhân </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="ThanhToan" asp-action="Index">Thanh toán</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="BenhAn" asp-action="Index">Bệnh án theo bệnh nhân</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="PhauThuatThuThuat" asp-action="Index">Phẫu thuật thủ thuật</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - APP 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

